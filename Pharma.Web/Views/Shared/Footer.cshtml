@model IEnumerable<Pharma.Web.Models.FooterViewModel>

<div class="container">
    <footer class="pt-3">
        <div class="row">
            @foreach (var footer in Model.Where(x=>x.Type=="title"))
            {
                <div class="col-6 col-md-3 mb-3 myfont">
                    <h5 class="fw-bold" style="color: #1E3B29">@footer.Name</h5>
                    <ul class="nav flex-column">
                        @foreach (var childfooter in Model.Where(x => x.Type == "page" && x.ParentID == footer.ID))
                        {
                            <li class="nav-item mb-2"><a href="/trang/@(childfooter.Link).html" style="color: #1E3B29" class="text-decoration-none">@childfooter.Name</a></li>
                        }
                    </ul>
                </div>
            }


            <div class="col-md-5 offset-md-1 mb-3">
                <iframe class="h-75" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.583061251996!2d106.63312477490878!3d10.843184989309657!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529528259bf23%3A0x1da1e510211672b!2sChung%20c%C6%B0%20Khang%20Gia!5e0!3m2!1svi!2s!4v1686320295986!5m2!1svi!2s" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

        <div class="d-flex flex-column flex-sm-row justify-content-between pt-4 mt-4 border-top mb-0 pb-0">
            <p>&copy; 2023 Lê Tiến Hoàng, Inc. All rights reserved.</p>
            <ul class="list-unstyled d-flex">
                <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter" /></svg></a></li>
                <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram" /></svg></a></li>
                <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook" /></svg></a></li>
            </ul>
        </div>
    </footer>
</div>
