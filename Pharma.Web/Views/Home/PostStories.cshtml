@model IEnumerable<Pharma.Web.Models.PostViewModel>
<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
    @foreach (var post in Model.Where(x=>x.HotFlag==true))
    {
        <div class="col">
            <a href="/tin-tuc/@(post.Alias).html" class="text-decoration-none">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('@post.Image');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1 myfont">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">@post.Name</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <li class="me-auto">
                                <img src="@post.Image" alt="Bootstrap" width="32" height="32" class="rounded-circle border border-white">
                            </li>
                            <li class="d-flex align-items-center me-3">
                                <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill" /></svg>
                                <small>Lê Tiến Hoàng</small>
                            </li>
                            <li class="d-flex align-items-center">
                                <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3" /></svg>
                                <small>Hoang's Pharma</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </a>
        </div>
    }

</div>